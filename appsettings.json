{
  "FilterConfiguration": {
    "Ollama": {
      "Endpoint": "http://localhost:11434",
      "Model": "llama3.2",
      "Temperature": 0.3,
      "MaxTokens": 500
    },
    "Gmail": {
      "CredentialsPath": "credentials.json",
      "FilteredLabel": "Filtered",
      "CheckIntervalSeconds": 60,
      "MaxMessagesPerCheck": 50
    },
    "FilterRules": [
      {
        "Name": "Prof. Galloway Misdirected Emails",
        "Enabled": true,
        "Keywords": ["professor", "prof", "galloway"],
        "Topics": ["academic", "university", "course", "assignment"],
        "Mentions": ["Prof. Galloway", "Professor Galloway", "Dr. Galloway"],
        "ConfidenceThreshold": 0.7,
        "Action": "MoveToFolder",
        "TargetFolder": "NotForMe",
        "AutoReplyTemplateId": "not-prof-galloway"
      },
      {
        "Name": "Spam and Marketing",
        "Enabled": true,
        "Keywords": ["unsubscribe", "marketing", "promotion", "sale", "offer"],
        "Topics": ["marketing", "advertisement", "promotional"],
        "Mentions": [],
        "ConfidenceThreshold": 0.8,
        "Action": "Delete",
        "TargetFolder": null,
        "AutoReplyTemplateId": null,
        "CustomPrompt": "Determine if this email is spam, marketing, or promotional content. Be very confident before marking as spam."
      },
      {
        "Name": "Generic Newsletter",
        "Enabled": true,
        "Keywords": ["newsletter", "weekly update", "digest"],
        "Topics": ["newsletter", "update", "news digest"],
        "Mentions": [],
        "ConfidenceThreshold": 0.6,
        "Action": "Archive",
        "TargetFolder": null,
        "AutoReplyTemplateId": null
      }
    ],
    "AutoReplyTemplates": [
      {
        "Id": "not-prof-galloway",
        "Name": "Wrong Recipient - Prof. Galloway",
        "Subject": "Re: {originalSubject} - Wrong Recipient",
        "Body": "Hello {sender},\n\nThank you for your email. However, I believe you may have reached the wrong person. I am not Prof. Galloway.\n\nIf you are trying to reach Professor Galloway, you may want to try contacting them at their university email address or through the department directory.\n\nBest regards",
        "IncludeOriginal": false
      }
    ]
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning"
    }
  }
}
