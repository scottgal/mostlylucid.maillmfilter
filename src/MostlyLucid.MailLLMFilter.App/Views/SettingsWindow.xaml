<Window x:Class="MostlyLucid.MailLLMFilter.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="âš™ Configuration Settings"
        Height="700" Width="900"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">

    <Window.Resources>
        <!-- Modern Button Style -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Accent Button -->
        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="1"
                CornerRadius="6"
                Padding="15"
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Configuration Settings"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                    <TextBlock Text="Manage your email filter settings and templates"
                               FontSize="12"
                               Foreground="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"
                               Margin="0,3,0,0"/>
                </StackPanel>

                <Button Grid.Column="1"
                        Content="ðŸ“ Open Config File"
                        Command="{Binding OpenConfigFileCommand}"
                        Style="{StaticResource ModernButton}"
                        ToolTip="Open appsettings.json in default editor"/>
            </Grid>
        </Border>

        <!-- Main Content with TabControl -->
        <TabControl Grid.Row="1"
                    Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    BorderThickness="1">

            <!-- General Settings Tab -->
            <TabItem Header="ðŸ  General">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="15">
                    <StackPanel>
                        <GroupBox Header="Email Provider" Padding="15" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Select your email service provider:"
                                          FontSize="13"
                                          Margin="0,0,0,10"
                                          Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                                <ComboBox ItemsSource="{Binding EmailProviders}"
                                         SelectedItem="{Binding SelectedEmailProvider}"
                                         FontSize="13"
                                         Height="30"/>
                            </StackPanel>
                        </GroupBox>

                        <GroupBox Header="Ollama LLM Settings" Padding="15" Margin="0,0,0,15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Endpoint:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FilterConfig.Ollama.Endpoint}" Height="28" Margin="0,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Model:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FilterConfig.Ollama.Model}" Height="28" Margin="0,5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Temperature:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding FilterConfig.Ollama.Temperature}" Height="28" Margin="0,5"/>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Max Tokens:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding FilterConfig.Ollama.MaxTokens}" Height="28" Margin="0,5"/>
                            </Grid>
                        </GroupBox>

                        <GroupBox Header="Gmail Settings" Padding="15" Margin="0,0,0,15">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Credentials Path:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding FilterConfig.Gmail.CredentialsPath}" Height="28" Margin="0,5"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Filtered Label:" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding FilterConfig.Gmail.FilteredLabel}" Height="28" Margin="0,5"/>

                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Check Interval (sec):" VerticalAlignment="Center" Margin="0,5"/>
                                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding FilterConfig.Gmail.CheckIntervalSeconds}" Height="28" Margin="0,5"/>
                            </Grid>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- Sample Prompts Tab -->
            <TabItem Header="ðŸ’¡ Sample Prompts">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                              Text="Choose from pre-configured filter templates"
                              FontSize="14"
                              Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                              Margin="0,0,0,15"/>

                    <StackPanel Grid.Row="1" Margin="0,0,0,15">
                        <TextBlock Text="Select a sample prompt:"
                                  FontSize="13"
                                  Margin="0,0,0,8"
                                  Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ComboBox Grid.Column="0"
                                    ItemsSource="{Binding SamplePrompts}"
                                    SelectedItem="{Binding SelectedSamplePrompt}"
                                    FontSize="13"
                                    Height="35"
                                    Margin="0,0,10,0"/>
                            <Button Grid.Column="1"
                                   Content="View Details"
                                   Command="{Binding ApplySamplePromptCommand}"
                                   Style="{StaticResource AccentButton}"
                                   Height="35"/>
                        </Grid>
                    </StackPanel>

                    <Border Grid.Row="2"
                           Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                           BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                           BorderThickness="1"
                           CornerRadius="6"
                           Padding="15">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <TextBlock TextWrapping="Wrap"
                                      FontSize="13"
                                      Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}">
                                <Run FontWeight="Bold">Available Sample Prompts:</Run><LineBreak/><LineBreak/>
                                <Run>â€¢ Identify misdirected academic emails</Run><LineBreak/>
                                <Run>â€¢ Detect spam and phishing attempts</Run><LineBreak/>
                                <Run>â€¢ Classify newsletters and digests</Run><LineBreak/>
                                <Run>â€¢ Find technical support requests</Run><LineBreak/>
                                <Run>â€¢ Detect urgent action items</Run><LineBreak/>
                                <Run>â€¢ Identify recruitment emails</Run><LineBreak/>
                                <Run>â€¢ Filter social media notifications</Run><LineBreak/>
                                <Run>â€¢ Detect invoices and billing</Run><LineBreak/>
                                <Run>â€¢ Find out-of-office replies</Run><LineBreak/>
                                <Run>â€¢ Identify marketing emails</Run><LineBreak/><LineBreak/>
                                <Run FontStyle="Italic">Select a prompt and click "View Details" to see the full template configuration.</Run>
                            </TextBlock>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Filter Rules Tab -->
            <TabItem Header="ðŸ“‹ Filter Rules">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <Button Content="âž• Add New Rule"
                               Command="{Binding AddNewRuleCommand}"
                               Style="{StaticResource AccentButton}"/>
                        <TextBlock Text="{Binding FilterRules.Count, StringFormat='Total Rules: {0}'}"
                                  VerticalAlignment="Center"
                                  Margin="15,0,0,0"
                                  FontSize="13"
                                  Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                             ItemsSource="{Binding FilterRules}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             GridLinesVisibility="Horizontal"
                             Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                             AlternatingRowBackground="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" MinWidth="150"/>
                            <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="80"/>
                            <DataGridTextColumn Header="Action" Binding="{Binding Action}" Width="120"/>
                            <DataGridTextColumn Header="Confidence" Binding="{Binding ConfidenceThreshold, StringFormat='{}{0:P0}'}" Width="100"/>
                            <DataGridTemplateColumn Header="Actions" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="ðŸ—‘ Delete"
                                               Command="{Binding DataContext.RemoveRuleCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                               CommandParameter="{Binding}"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Cursor="Hand"
                                               Padding="5"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- LLM Templates Tab -->
            <TabItem Header="ðŸ¤– LLM Templates">
                <Grid Margin="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <Button Content="âž• Add New Template"
                               Command="{Binding AddNewTemplateCommand}"
                               Style="{StaticResource AccentButton}"/>
                        <TextBlock Text="{Binding LlmTemplates.Count, StringFormat='Total Templates: {0}'}"
                                  VerticalAlignment="Center"
                                  Margin="15,0,0,0"
                                  FontSize="13"
                                  Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1"
                             ItemsSource="{Binding LlmTemplates}"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             GridLinesVisibility="Horizontal"
                             Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                             AlternatingRowBackground="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="200"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" MinWidth="180"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*" MinWidth="200"/>
                            <DataGridTemplateColumn Header="Actions" Width="100">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="ðŸ—‘ Delete"
                                               Command="{Binding DataContext.RemoveTemplateCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                               CommandParameter="{Binding}"
                                               Background="Transparent"
                                               BorderThickness="0"
                                               Cursor="Hand"
                                               Padding="5"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Footer with Action Buttons -->
        <Border Grid.Row="2"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="1"
                CornerRadius="6"
                Padding="15"
                Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                          Text="âš  Unsaved changes"
                          Foreground="Orange"
                          FontWeight="Bold"
                          VerticalAlignment="Center"
                          Visibility="{Binding HasUnsavedChanges, Converter={StaticResource BoolToVisibilityConverter}}"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="ðŸ”„ Reload"
                           Command="{Binding ReloadConfigurationCommand}"
                           Style="{StaticResource ModernButton}"/>
                    <Button Content="ðŸ’¾ Save Configuration"
                           Command="{Binding SaveConfigurationCommand}"
                           Style="{StaticResource AccentButton}"/>
                    <Button Content="Close"
                           Click="CloseButton_Click"
                           Style="{StaticResource ModernButton}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>
</Window>
