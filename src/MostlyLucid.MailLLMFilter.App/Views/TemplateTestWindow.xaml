<Window x:Class="MostlyLucid.MailLLMFilter.App.Views.TemplateTestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LLM Template Tester"
        Height="800" Width="1000"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="LLM Template Tester"
                       FontSize="20"
                       FontWeight="Bold"/>
            <TextBlock Text="Test your LLM filter templates with sample emails"
                       Foreground="Gray"
                       Margin="0,5,0,0"/>
        </StackPanel>

        <!--Main Content-->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!--Left Side: Input-->
            <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <!--Template Selection-->
                    <TextBlock Text="Select Template:"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding AvailableTemplates}"
                              SelectedItem="{Binding SelectedTemplate}"
                              DisplayMemberPath="Name"
                              Margin="0,0,0,15"/>

                    <!--Template Info-->
                    <Border BorderBrush="#CCCCCC"
                            BorderThickness="1"
                            Padding="10"
                            Margin="0,0,0,15"
                            Background="#F9F9F9">
                        <StackPanel>
                            <TextBlock Text="{Binding SelectedTemplate.Name}"
                                       FontWeight="Bold"/>
                            <TextBlock Text="{Binding SelectedTemplate.Description}"
                                       TextWrapping="Wrap"
                                       Margin="0,5,0,0"
                                       Foreground="Gray"/>
                        </StackPanel>
                    </Border>

                    <!--Sample Data Buttons-->
                    <TextBlock Text="Load Sample Email:"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <WrapPanel Margin="0,0,0,15">
                        <Button Content="Academic"
                                Command="{Binding LoadSampleEmailCommand}"
                                CommandParameter="academic"
                                Margin="0,0,5,0"
                                Padding="10,5"/>
                        <Button Content="Spam"
                                Command="{Binding LoadSampleEmailCommand}"
                                CommandParameter="spam"
                                Margin="0,0,5,0"
                                Padding="10,5"/>
                        <Button Content="Newsletter"
                                Command="{Binding LoadSampleEmailCommand}"
                                CommandParameter="newsletter"
                                Margin="0,0,5,0"
                                Padding="10,5"/>
                        <Button Content="Support"
                                Command="{Binding LoadSampleEmailCommand}"
                                CommandParameter="support"
                                Padding="10,5"/>
                    </WrapPanel>

                    <!--Test Email Input-->
                    <TextBlock Text="Test Email:"
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>

                    <TextBlock Text="From:"
                               Margin="0,5,0,2"/>
                    <TextBox Text="{Binding TestEmailFrom, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Subject:"
                               Margin="0,0,0,2"/>
                    <TextBox Text="{Binding TestEmailSubject, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Body:"
                               Margin="0,0,0,2"/>
                    <TextBox Text="{Binding TestEmailBody, UpdateSourceTrigger=PropertyChanged}"
                             Height="120"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,10"/>

                    <!--Filter Context-->
                    <TextBlock Text="Filter Context:"
                               FontWeight="Bold"
                               Margin="0,10,0,5"/>

                    <TextBlock Text="Keywords (comma-separated):"
                               Margin="0,5,0,2"/>
                    <TextBox Text="{Binding TestKeywords, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Topics (comma-separated):"
                               Margin="0,0,0,2"/>
                    <TextBox Text="{Binding TestTopics, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10"/>

                    <TextBlock Text="Mentions (comma-separated):"
                               Margin="0,0,0,2"/>
                    <TextBox Text="{Binding TestMentions, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,0,0,10"/>
                </StackPanel>
            </ScrollViewer>

            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          Background="#CCCCCC"/>

            <!--Right Side: Results-->
            <Border Grid.Column="2"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    Padding="10">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Test Results"
                                   FontSize="16"
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="{Binding TestResult}"
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas"
                                   Background="#F5F5F5"
                                   Padding="10"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!--Bottom: Action Buttons-->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,15,0,0">
            <Button Content="Test Template"
                    Command="{Binding TestTemplateCommand}"
                    IsEnabled="{Binding IsTesting, Converter={StaticResource InverseBoolConverter}}"
                    Background="#4CAF50"
                    Foreground="White"
                    Padding="20,10"
                    Margin="0,0,10,0"/>

            <Button Content="Close"
                    Click="CloseButton_Click"
                    Padding="20,10"/>
        </StackPanel>
    </Grid>

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBoolConverter"/>
    </Window.Resources>
</Window>
