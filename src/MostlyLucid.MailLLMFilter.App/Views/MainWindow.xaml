<Window x:Class="MostlyLucid.MailLLMFilter.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MostlyLucid Mail LLM Filter"
        Height="750" Width="1400"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:InverseBooleanConverter x:Key="InverseBoolConverter"/>

        <!-- Modern Button Style with Windows Theme -->
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}"/>
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.HighlightTextBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Accent Button Style -->
        <Style x:Key="AccentButton" TargetType="Button" BasedOn="{StaticResource ModernButton}">
            <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header / Control Panel -->
        <Border Grid.Row="0"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="1"
                Padding="15"
                CornerRadius="8"
                Margin="0,0,0,15">
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="ðŸ”— Connect"
                            Command="{Binding ConnectCommand}"
                            IsEnabled="{Binding IsConnected, Converter={StaticResource InverseBoolConverter}}"
                            Style="{StaticResource AccentButton}"
                            ToolTip="Connect to email service"/>

                    <Button Content="â–¶ Process"
                            Command="{Binding ProcessMessagesCommand}"
                            Style="{StaticResource ModernButton}"
                            ToolTip="Process unread messages"/>

                    <Button Content="ðŸ§ª Test"
                            Command="{Binding OpenTemplateTesterCommand}"
                            Style="{StaticResource ModernButton}"
                            ToolTip="Test filter templates"/>

                    <Button Content="âš™ Settings"
                            Command="{Binding OpenSettingsCommand}"
                            Style="{StaticResource ModernButton}"
                            ToolTip="Open configuration settings"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <CheckBox Content="Auto-check"
                              IsChecked="{Binding AutoCheckEnabled}"
                              Command="{Binding ToggleAutoCheckCommand}"
                              Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"
                              FontSize="13"/>

                    <TextBlock Text="Interval (sec):"
                               Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                               VerticalAlignment="Center"
                               Margin="0,0,8,0"
                               FontSize="13"/>

                    <TextBox Text="{Binding AutoCheckInterval, UpdateSourceTrigger=PropertyChanged}"
                             Width="70"
                             Height="28"
                             VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
                             Padding="5"
                             BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                             Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Results List -->
            <Border Grid.Column="0"
                    Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="10">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.15"/>
                </Border.Effect>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="ðŸ“¬ Filter Results"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                               Margin="5,5,5,15"/>

                    <DataGrid Grid.Row="1"
                              ItemsSource="{Binding FilterResults}"
                              SelectedItem="{Binding SelectedResult}"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              GridLinesVisibility="Horizontal"
                              HeadersVisibility="Column"
                              CanUserResizeRows="False"
                              Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                              RowBackground="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                              AlternatingRowBackground="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                              BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Status"
                                                Binding="{Binding Status}"
                                                Width="130"/>
                            <DataGridTextColumn Header="From"
                                                Binding="{Binding From}"
                                                Width="220"/>
                            <DataGridTextColumn Header="Subject"
                                                Binding="{Binding Subject}"
                                                Width="*"/>
                            <DataGridTextColumn Header="Rule"
                                                Binding="{Binding RuleName}"
                                                Width="140"/>
                            <DataGridTextColumn Header="Action"
                                                Binding="{Binding Action}"
                                                Width="150"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1"
                          HorizontalAlignment="Stretch"
                          Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                          ShowsPreview="True"/>

            <!-- Details Panel -->
            <Border Grid.Column="2"
                    Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}"
                    BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="15">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.15"/>
                </Border.Effect>
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="ðŸ“„ Message Details"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                   Margin="0,0,0,15"/>

                        <TextBlock Text="{Binding SelectedResult.Result.Message.Subject, StringFormat='Subject: {0}'}"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                   FontSize="13"
                                   Margin="0,5"/>

                        <TextBlock Text="{Binding SelectedResult.Result.Message.From, StringFormat='From: {0}'}"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                   FontSize="13"
                                   Margin="0,5"/>

                        <TextBlock Text="{Binding SelectedResult.Result.Reason, StringFormat='Reason: {0}'}"
                                   TextWrapping="Wrap"
                                   Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                   FontSize="13"
                                   Margin="0,15,0,5"
                                   FontWeight="Medium"/>

                        <TextBlock Text="ðŸ¤– LLM Analysis:"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                   Margin="0,15,0,8"/>

                        <Border Background="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"
                                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="12">
                            <TextBlock Text="{Binding SelectedResult.Result.LlmAnalysis}"
                                       TextWrapping="Wrap"
                                       FontFamily="Consolas"
                                       FontSize="12"
                                       Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"
                BorderBrush="{DynamicResource {x:Static SystemColors.ActiveBorderBrushKey}}"
                BorderThickness="1"
                Padding="12"
                CornerRadius="6"
                Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                           FontSize="13"
                           VerticalAlignment="Center"/>

                <ProgressBar Grid.Column="2"
                             Width="180"
                             Height="22"
                             IsIndeterminate="True"
                             Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVisibilityConverter}}"
                             Foreground="{DynamicResource {x:Static SystemColors.HotTrackBrushKey}}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
